.section {
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.left {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 95px;
  background: #F6F6F6;
  text-align: center;
  font-size: 28rpx;
}

.left::before {
  content: "";
  position: absolute;
  background: #dcdcdc;
  right: 0;
  top: 0;
  height: 100%;
}

.left view.active {
  background: #FFF;
  position: relative;
  z-index: 2;
}

.left view {
  display: block;
  height: 60px;
  line-height: 60px;
  border-bottom: 0px solid #dcdcdc;
}

.right {
  margin-left: 90px;
  height: 100%;
  overflow: hidden;
  width: auto;
  background: #fff;
}